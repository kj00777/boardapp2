<div class="container col-md-10 offset-md-1 col-lg-8 offset-lg-2">
  <div class="widget change-password">
    <h3 class="widget-header user">ログイン</h3>
    <%= form_tag(user_sessions_path, method: :post) do %>
      <div class="form-group">
          <label for='email'>メールアドレス</label><br />
          <%= text_field_tag "email","", class:"form-control"  %>
          
        </div>
        <div class="form-group">
          <label for='password'>パスワード</label><br />
          <%= password_field_tag "password", "", class: "form-control" %>
          
        </div>
        <%= submit_tag "login", class: "btn btn-transparent" %>
        
      <% end %>
    </div>
  </div>
  <div class='text-center'>
    <a href='/users/new' class='mr15'>新規登録はこちら</a>
    <a href='#'>パスワードをお忘れの方はこちら</a>
  </div>
</div>

