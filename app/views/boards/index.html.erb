<div class="advance-search">
  <form>
    <div class="row">
      <div class="col-lg-12 col-md-12">
        <div class="block d-flex">
        <%= search_form_for @q do |f| %>
          <%= f.search_field :title_or_content_cont, class: "form-control mb-2 mr-sm2 mb-sm0 mr5", placeholder: "検索ワード" %>
          <%= f.submit value: "検索", class: "btn btn-main"  %>
          
        <% end %>
        </div>
      </div>
    </div>
  </form>
</div>

<!-- 掲示板一覧 -->
<div class="row mt15">
<% @boards.each do |board| %>
    <%= render "shared/board_panel", board: board %>
<% end %>
</div>

<!-- ページネーション -->
<div class='mb15'>
  <nav>
    <ul class='pagination'>
      <li class='page-item active'>
        <a class='page-link'>1</a>
      </li>
      <li class='page-item'>
        <a rel='next' class='page-link' href='#'>2</a>
      </li>
      <li class='page-item'>
        <a rel='next' class='page-link' href='#'>Next</a>
      </li>
      <li class='page-item'>
        <a rel='next' class='page-link' href='#'>Last</a>
      </li>
    </ul>
  </nav>
</div>

